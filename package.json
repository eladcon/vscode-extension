{
	"name": "rollout",
	"displayName": "Rollout",
	"description": "Rollout extension for VS Code",
	"version": "0.1.0",
	"publisher": "eladcon",
	"repository": "https://github.com/eladcon/vscode-extension",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"icon": "login-logo.png",
	"contributes": {
		"configuration": [
			{
				"title": "Rollout Configuration",
				"properties": {
					"conf.rollout.apiToken": {
						"type": "string",
						"default": "",
						"description": "Rollout API Token",
						"scope": "window"
					},
					"conf.rollout.appId": {
						"type": "string",
						"default": "",
						"description": "Rollout Application Id (Optional)",
						"scope": "window"
					},
					"conf.rollout.environmentName": {
						"type": "string",
						"default": "",
						"description": "Rollout Environment Name (Optional)",
						"scope": "window"
					},
					"conf.rollout.useLineForHover": {
						"type": "boolean",
						"default": false,
						"description": "Hover anywhere on the line to trigger rollout popup",
						"scope": "window"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./",
		"test": "mocha -r ts-node/register src/tests/\\*\\*/\\*.spec.ts"
	},
	"devDependencies": {
		"@types/chai": "^4.2.3",
		"@types/mocha": "^5.2.7",
		"@types/node": "^10.14.17",
		"@types/vscode": "^1.34.0",
		"chai": "^4.2.0",
		"mocha": "^6.2.0",
		"ts-node": "^8.4.1",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"js-tokens": "^5.0.0",
		"js-yaml": "^3.13.1",
		"rox-node": "^4.8.0"
	}
}
